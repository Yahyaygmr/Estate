@model IEnumerable<Estate.Models.Portfolio>

@{
    ViewData["Title"] = "Portföy Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="margin:25px;">
    <div class="row">
        <div class="col-md-4">
            <a asp-action="Create" class="btn btn-success form-control">+ Portföy Oluştur</a>
        </div>

    </div>

</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mahalle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdaParsel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MFiyat) (TL)
            </th>
            <th>
                Alan (m²)
            </th>
            <th>
                Fiyat (TL)
            </th>
            <th>
                Yayınla
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Mahalle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdaParsel)
                </td>
                <td>
                    @item.MFiyat.ToString("0,000.00") ₺
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alan) m²
                </td>
                <td>
                    @item.Fiyat.ToString("0,000.00") ₺
                </td>
                <td>
                    @if (item.Status)
                    {
                        <a class="btn btn-success btn-sm">Yayında</a>
                    }
                    else
                    {
                        <a class="btn btn-danger btn-sm">Pasif</a>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-dark" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pen"></i> Düzenle</a> |
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-file-text"></i> Detay</a> |
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3"></i> Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
