@model Estate.Models.Portfolio

@{
    ViewData["Title"] = "Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Düzenle</h2>

<h4>Portföy</h4>
<hr />
<div class="row">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="col-md-6 col-sm-6 col-xs-12 form-group">
            <label asp-for="Mahalle" class="control-label"></label>
            <input asp-for="Mahalle" class="form-control" />
            <span asp-validation-for="Mahalle" class="text-danger"></span>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12 form-group">
            <label asp-for="AdaParsel" class="control-label"></label>
            <input asp-for="AdaParsel" class="form-control" />
            <span asp-validation-for="AdaParsel" class="text-danger"></span>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12 form-group">
            <label asp-for="Konum" class="control-label"></label>
            <input asp-for="Konum" class="form-control" />
            <span asp-validation-for="Konum" class="text-danger"></span>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12 form-group">
            <label asp-for="Alan" class="control-label">Alan(m²)</label>
            <input asp-for="Alan" class="form-control" />
            <span asp-validation-for="Alan" class="text-danger"></span>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12 form-group">
            <label asp-for="Emsal" class="control-label"></label>
            <input asp-for="Emsal" class="form-control" />
            <span asp-validation-for="Emsal" class="text-danger"></span>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12 form-group">
            <label asp-for="Fiyat" class="control-label">Fiyat(TL)</label>
            <input asp-for="Fiyat" class="form-control" />
            <span asp-validation-for="Fiyat" class="text-danger"></span>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12 form-group">
            <label asp-for="MFiyat" class="control-label">m² Fiyatı(TL)</label>
            <input asp-for="MFiyat" class="form-control" />
            <span asp-validation-for="MFiyat" class="text-danger"></span>
        </div>

        <div class="col-md-6 col-sm-6 col-xs-12 form-group">
            <label asp-for="Sunum" class="control-label"></label>
            <input asp-for="Sunum" class="form-control" />
            <span asp-validation-for="Sunum" class="text-danger"></span>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12 form-group">
            <label asp-for="Tarih" class="control-label"></label>
            <input asp-for="Tarih" class="form-control" />
            <span asp-validation-for="Tarih" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input asp-for="Status" /> Yayına Al
                </label>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Acıklama" class="control-label" style="margin:15px;"></label>
            <input asp-for="Acıklama" class="form-control" />
            <span asp-validation-for="Acıklama" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin:15px;">
            <input type="submit" value="Güncelle" class="btn btn-success" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" class="btn btn-info"><i class="bi bi-arrow-left"></i> Listeye Dön</a>
</div>
